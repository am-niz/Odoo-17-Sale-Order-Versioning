<odoo>
    <record id="view_sale_order_version_restore_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.version.restore.wizard.form</field>
        <field name="model">sale.order.version.restore.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Restoration">
                <p>Are you sure you want to make this revision the current version?</p>
                <footer>
                    <button name="action_confirm" string="OK" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

